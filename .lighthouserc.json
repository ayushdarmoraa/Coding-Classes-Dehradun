{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/courses/full-stack",
        "http://localhost:3000/online-courses/full-stack",
        "http://localhost:3000/locations/dehradun"
      ],
      "settings": {
        "chromeFlags": "--no-sandbox",
        "emulatedFormFactor": "mobile",
        "throttlingMethod": "simulate",
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 1638.4,
          "cpuSlowdownMultiplier": 4
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.85}],
        "lighthouse-perf/largest-contentful-paint-3g": ["warn", {"maxNumericValue": 2500}],
        "lighthouse-perf/first-contentful-paint-3g": ["warn", {"maxNumericValue": 1500}],
        "lighthouse-perf/interactive-3g": ["warn", {"maxNumericValue": 200}],
        "lhci/metrics/total-blocking-time": ["warn", {"maxNumericValue": 200}],
        "metrics/first-contentful-paint": ["warn", {"maxNumericValue": 1500}],
        "metrics/largest-contentful-paint": ["warn", {"maxNumericValue": 2500}],
        "metrics/cumulative-layout-shift": ["warn", {"maxNumericValue": 0.10}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
